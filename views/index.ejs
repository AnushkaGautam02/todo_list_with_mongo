<!DOCTYPE html>
<html>
  <head>
    <title>todo</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="box">
      <h1>Todo List</h1>
    </div>
    <div class="box">
      
        <% ejes.forEach(items =>{ %>
          <form action="/delete" method="post">
            <div class="item">
              <input type="checkbox" name="ch1" value="<%= items._id %>" onchange="this.form.submit()">
              <p><%= items.item %></p>
            </div>
          </form>
          
        <% }) %>

      
      
      <form action="/" method="post">
        <input type="text" name="em1" id="td" placeholder="Enter todo item">
        <button type="submit">+</button>
      </form>
    </div>
    
  </body>
</html>
